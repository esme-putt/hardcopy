<footer class="terminal-footer">
  
  <div class="row">
    <div class="col-md-4 mb-4">
      <div class="terminal-footer-title">// ABOUT HARDCOPY</div>
      <div class="terminal-footer-text">
        We love technology and hate waste.
      </div>
    </div>
    
    <div class="col-md-2 mb-4">
      <div class="terminal-footer-title">// SHOP</div>
      <div class="terminal-footer-links">
        <a href="<%= products_path %>" class="terminal-footer-link">all_products</a>
      </div>
    </div>

    <div class="col-md-4 mb-4">
      <div class="terminal-footer-title">// CONTACT</div>
      <div class="terminal-footer-text">
        <i class="fas fa-envelope me-2"></i> hello@hardcopy.com<br>
      </div>
      
      <div class="terminal-footer-title mt-3">// NEWSLETTER</div>
      <%= form_with model: Subscriber.new, local: true, class: "d-flex mt-2" do |f| %>
        <div class="input-group">
          <%= f.email_field :email, class: "form-control", placeholder: "your_email@example.com", required: true %>
          <%= f.hidden_field :name, value: "Subscriber" %>
          <button type="submit" class="btn btn-primary">subscribe</button>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="terminal-separator"></div>
  
  <div class="row">
    <div class="col-md-6 mb-3 mb-md-0">
      <div class="terminal-footer-text">
        Â© <%= Time.current.year %> Hardcopy // All rights reserved
      </div>
    </div>
  </div>
</footer>