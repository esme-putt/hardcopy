<footer class="terminal-footer">
  <div class="terminal-command">
    <span class="terminal-command-prompt">visitor@hardcopy:~$</span>
    <span class="terminal-command-text">cat footer.txt</span>
  </div>
  
  <div class="terminal-separator"></div>
  
  <div class="row">
    <div class="col-md-4 mb-4">
      <div class="terminal-footer-title">// ABOUT HARDCOPY</div>
      <div class="terminal-footer-text">
        Our mission is to rescue technology from landfill, empower people with knowledge, and give electronics a second life.
      </div>
      <div class="d-flex gap-3 mt-3">
        <a href="#" class="terminal-footer-link"><i class="fab fa-github"></i></a>
        <a href="#" class="terminal-footer-link"><i class="fab fa-twitter"></i></a>
        <a href="#" class="terminal-footer-link"><i class="fab fa-instagram"></i></a>
        <a href="#" class="terminal-footer-link"><i class="fab fa-linkedin"></i></a>
      </div>
    </div>
    
    <div class="col-md-2 mb-4">
      <div class="terminal-footer-title">// SHOP</div>
      <div class="terminal-footer-links">
        <a href="<%= products_path %>" class="terminal-footer-link">all_products</a>
        <a href="#" class="terminal-footer-link">laptops</a>
        <a href="#" class="terminal-footer-link">phones</a>
        <a href="#" class="terminal-footer-link">accessories</a>
      </div>
    </div>
    
    <div class="col-md-2 mb-4">
      <div class="terminal-footer-title">// LEARN</div>
      <div class="terminal-footer-links">
        <a href="<%= weekly_fix_path %>" class="terminal-footer-link">weekly_fix</a>
        <a href="#" class="terminal-footer-link">repair_guides</a>
        <a href="#" class="terminal-footer-link">sustainability</a>
        <a href="<%= about_path %>" class="terminal-footer-link">about_us</a>
      </div>
    </div>
    
    <div class="col-md-4 mb-4">
      <div class="terminal-footer-title">// CONTACT</div>
      <div class="terminal-footer-text">
        <i class="fas fa-envelope me-2"></i> hello@hardcopy.com<br>
        <i class="fas fa-phone me-2"></i> (555) 123-4567<br>
        <i class="fas fa-map-marker-alt me-2"></i> 123 Repair Street, Fixville
      </div>
      
      <div class="terminal-footer-title mt-3">// NEWSLETTER</div>
      <%= form_with model: Subscriber.new, local: true, class: "d-flex mt-2" do |f| %>
        <div class="input-group">
          <%= f.email_field :email, class: "form-control", placeholder: "your_email@example.com", required: true %>
          <%= f.hidden_field :name, value: "Subscriber" %>
          <button type="submit" class="btn btn-primary">subscribe</button>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="terminal-separator"></div>
  
  <div class="row">
    <div class="col-md-6 mb-3 mb-md-0">
      <div class="terminal-footer-text">
        Â© <%= Time.current.year %> Hardcopy // All rights reserved
      </div>
    </div>
    <div class="col-md-6 text-md-end">
      <a href="#" class="terminal-footer-link me-3">privacy_policy</a>
      <a href="#" class="terminal-footer-link me-3">terms_of_service</a>
      <a href="#" class="terminal-footer-link">shipping_policy</a>
    </div>
  </div>
</footer>