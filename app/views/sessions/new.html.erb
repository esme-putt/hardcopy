<% content_for :title, "Log In" %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card border-0 shadow-sm">
        <div class="card-body p-4 p-md-5">
          <div class="text-center mb-4">
            <h1 class="h3">Log In to Your Account</h1>
            <p class="text-muted">Welcome back to Hardcopy</p>
          </div>
          
          <%= form_with url: login_path, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :email, "Email Address", class: "form-label" %>
              <%= f.email_field :email, class: "form-control", required: true, autofocus: true %>
            </div>
            
            <div class="mb-3">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class: "form-control", required: true %>
            </div>
            
            <div class="d-grid gap-2 mb-3">
              <%= f.submit "Log In", class: "btn btn-success btn-lg" %>
            </div>
            
            <div class="text-center">
              <p>Don't have an account? <%= link_to "Sign up", signup_path, class: "text-success" %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>