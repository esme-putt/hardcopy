<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand" do %>
      <span class="fw-bold">HARDCOPY</span>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link #{current_page?(root_path) ? 'active' : ''}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Store", products_path, class: "nav-link #{controller_name == 'products' ? 'active' : ''}" %>
        </li>
        <li class="nav-item">
          <%= link_to "The Weekly Fix", weekly_fix_path, class: "nav-link #{controller_name == 'posts' ? 'active' : ''}" %>
        </li>
        <li class="nav-item">
          <%= link_to "About", about_path, class: "nav-link #{current_page?(about_path) ? 'active' : ''}" %>
        </li>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to cart_path, class: "nav-link" do %>
            <i class="fas fa-shopping-cart"></i>
            <% if session[:cart].present? && session[:cart].any? %>
              <span class="badge bg-success"><%= session[:cart].values.sum %></span>
            <% end %>
          <% end %>
        </li>
        <% if current_user %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
              <%= current_user.name %>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <% if current_user.admin? %>
                <li><%= link_to "Admin Dashboard", admin_path, class: "dropdown-item" %></li>
                <li><hr class="dropdown-divider"></li>
              <% end %>
              <li><%= link_to "My Orders", orders_path, class: "dropdown-item" %></li>
              <li><%= link_to "Logout", logout_path, method: :delete, class: "dropdown-item" %></li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", login_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Up", signup_path, class: "btn btn-outline-success btn-sm ms-2" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>