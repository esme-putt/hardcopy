<%= render 'hero' %>

<%= render 'mission_section' %>

<section class="py-5">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="section-title">Featured Products</h2>
      <p class="section-subtitle">Rescued from landfill, restored with care</p>
    </div>
    
    <div class="row">
      <% if @featured_products.present? %>
        <% @featured_products.each do |product| %>
          <div class="col-md-3 mb-4">
            <div class="card product-card h-100">
              <% if product.images.attached? %>
                <div class="product-image">
                  <%= image_tag product.images.first, class: "card-img-top", alt: product.title %>
                  <% if product.condition.present? %>
                    <div class="product-condition badge bg-purple">
                      <%= product.condition %>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <div class="product-image bg-light d-flex align-items-center justify-content-center">
                  <i class="fas fa-image fa-3x text-muted"></i>
                  <% if product.condition.present? %>
                    <div class="product-condition badge bg-purple">
                      <%= product.condition %>
                    </div>
                  <% end %>
                </div>
              <% end %>
              
              <div class="card-body">
                <h3 class="product-title"><%= product.title %></h3>
                <div class="product-price">
                  $<%= sprintf('%.2f', product.price) %>
                  <% if product.original_price.present? && product.original_price > product.price %>
                    <span class="product-price-original">$<%= sprintf('%.2f', product.original_price) %></span>
                  <% end %>
                </div>
                <div class="d-flex justify-content-between">
                  <%= link_to "View Details", product_path(product), class: "btn btn-outline-primary" %>
                  <%= button_to add_to_cart_path(product), class: "btn btn-primary" do %>
                    <i class="fas fa-cart-plus"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col-12 text-center">
          <p>No featured products available at the moment. Check back soon!</p>
        </div>
      <% end %>
    </div>
    
    <div class="text-center mt-4">
      <%= link_to "VIEW ALL PRODUCTS", products_path, class: "btn btn-accent" %>
    </div>
  </div>
</section>

<section class="py-5 bg-light">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="section-title">The Weekly Fix</h2>
      <p class="section-subtitle">Latest from our repair and sustainability blog</p>
    </div>
    
    <div class="row">
      <% if @recent_posts.present? %>
        <% @recent_posts.each do |post| %>
          <div class="col-md-4 mb-4">
            <div class="card blog-card h-100">
              <% if post.featured_image.attached? %>
                <div class="blog-image">
                  <%= image_tag post.featured_image, class: "card-img-top", alt: post.title %>
                </div>
              <% else %>
                <div class="blog-image d-flex align-items-center justify-content-center">
                  <i class="fas fa-image fa-3x text-muted"></i>
                </div>
              <% end %>
              <div class="card-body">
                <p class="blog-date">
                  <i class="far fa-calendar-alt me-1"></i>
                  <%= post.published_at.strftime("%B %d, %Y") %>
                </p>
                <h3 class="blog-title"><%= post.title %></h3>
                <p class="blog-excerpt"><%= post.content.to_plain_text.truncate(100) %></p>
                <%= link_to "Read More â†’", post_path(post), class: "blog-link" %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col-12 text-center">
          <p>No blog posts available at the moment. Check back soon!</p>
        </div>
      <% end %>
    </div>
    
    <div class="text-center mt-4">
      <%= link_to "VIEW ALL POSTS", weekly_fix_path, class: "btn btn-accent" %>
    </div>
  </div>
</section>