<% content_for :title, "Subscribe to The Weekly Fix" %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card border-0 shadow-sm">
        <div class="card-body p-4 p-md-5">
          <div class="text-center mb-4">
            <i class="fas fa-envelope-open-text fa-3x text-success mb-3"></i>
            <h1 class="h3">Subscribe to The Weekly Fix</h1>
            <p class="text-muted">Get repair guides, sustainability tips, and exclusive offers delivered to your inbox!</p>
          </div>
          
          <%= form_with model: @subscriber, local: true do |f| %>
            <% if @subscriber.errors.any? %>
              <div class="alert alert-danger">
                <h5><%= pluralize(@subscriber.errors.count, "error") %> prohibited this subscription:</h5>
                <ul>
                  <% @subscriber.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            
            <div class="mb-3">
              <%= f.label :name, "Your Name", class: "form-label" %>
              <%= f.text_field :name, class: "form-control", required: true, value: current_user&.name, autofocus: !current_user %>
            </div>
            
            <div class="mb-4">
              <%= f.label :email, "Email Address", class: "form-label" %>
              <%= f.email_field :email, class: "form-control", required: true, value: current_user&.email %>
            </div>
            
            <div class="d-grid gap-2 mb-3">
              <%= f.submit "Subscribe", class: "btn btn-success btn-lg" %>
            </div>
            
            <div class="text-center small text-muted">
              <p>We respect your privacy and will never share your email address. You can unsubscribe at any time.</p>
              
              <% unless user_signed_in? %>
                <hr>
                <p>Already have an account? <%= link_to "Log in", login_path, class: "text-success" %></p>
                <p>Want to create an account to manage your subscription? <%= link_to "Sign up", signup_path, class: "text-success" %></p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>